<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.AyouhAMealApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#629A21</item>
        <item name="colorPrimaryVariant">#90B891</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item> // so we can see the time and wifi icon,etc at the top of the screen
        <item name="android:navigationBarColor">@color/navigationBarColor</item>
    </style>

    <style name="Theme.AyouhAMealApp" parent="Base.Theme.AyouhAMealApp" />
</resources>